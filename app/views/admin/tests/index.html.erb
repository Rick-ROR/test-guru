<div class="p-3 bg-gradient-light text-dark">
  <h1>Список тестов:</h1>
</div>

<p>
  <%= link_to t('.create'), new_admin_test_path, class: "btn btn-outline-success" %>
</p>

<%= render 'shared/errors', resource: @test %>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th class="sort-by-title pointer">
        <%= t('.title') %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th><%= t('.level') %></th>
      <th><%= t('.questions') %></th>
      <th><%= t('.author') %></th>
      <th colspan="3"><%= t('.action') %></th>
    </tr>
  </thead>
  <%= render @tests %>

</table>
