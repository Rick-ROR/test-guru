<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :image %>
    <%= form.text_field :image, id: :badge_image %>
  </p>

  <p>
    <%= form.label :title %>
    <%= form.text_field :title, id: :badge_title %>
  </p>

  <p>
    <%= form.label :rule %>
    <%= form.select :rule, @list_rules, prompt: true %>
  </p>

  <p>
    <%= form.label :sub_rule %>
    <%= form.select :sub_rule, @list_sub_rules, prompt: true %>
  </p>

  <p> <%= form.submit %> </p>
<% end %>
